.bg {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  height: 100%; /* 添加父元素高度 */
}

.head {
  display: flex;
  justify-content: center; /* 修改为 flex-end */
  align-items: flex-end;
  width: 100%;
  height: 200rpx;
  font-size: 38rpx;
  color: #fff;
}

.main-container {
  box-sizing: border-box;
  margin-top: 140rpx;
  min-height: 750rpx;
  border-radius: 42rpx 42rpx 0 0;
  padding: 20rpx;
  width: 100%;
  background-color: #fff;
}

.joblist {
  width: 650rpx;
  margin: auto;
  margin-top: 20rpx;
  border-radius: 30rpx;
  padding:25rpx;
  background-color: #f6f7fb;
}

.jobtitle {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 35rpx;
  margin-left: 8rpx;
}

.joblist image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.joblist text {
  align-items: center;
}

.jobstatus,
.jobdata {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  color: #707070;
}