<!--pages/job/job.wxml-->
<view class="bg">
  <view class="head">我的职位</view>
  <view class="main-container">
    <van-dropdown-menu active-color="rgba(253, 119, 83, 1);">
      <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
      <van-dropdown-item value="{{ value2 }}" options="{{ option2 }}" />
    </van-dropdown-menu>
    <view class="body">
      <view class="box" wx:for="{{[1,2,3]}}">
        <view class="title">招聘仓库管理员</view>
        <view class="state">
          <image src="../../assets/clock.svg" mode="aspectFit" style="width: 48rpx; height: 48rpx;"/>
          <span>招聘中</span>
          <span>·</span>
          <span>发布于10.08</span>
        </view>
        <view class="user">
          <image src="../../assets/signal.svg" mode="aspectFit" style="width: 38rpx; height: 38rpx;"/>
          <span>今日曝光</span>
          <span>1</span>
          <span>已报名</span>
          <span>1</span>
        </view>
        <view class="btn">
          <view class="ibtn" bindtap="onPop">职位操作</view>
          <view class="ibtn orange" style="margin-left:auto;">职位刷新</view>
        </view>
      </view>
    </view>
  </view>
</view>

<van-action-sheet show="{{ show }}" bind:close="onClose" custom-class="pop" title="职位操作">
<view class="pop-container">
  <view>
  <image src="../../assets/pause.svg" mode="aspectFit" style="width: 48rpx; height: 48rpx;" />
  暂停招聘</view>
  <view>
    <image src="../../assets/modify.svg" mode="aspectFit" style="width: 48rpx; height: 48rpx;" />
  修改职位</view>
  <view>
    <image src="../../assets/close.svg" mode="aspectFit" style="width: 48rpx; height: 48rpx;" />
  关闭职位</view>
</view>
</van-action-sheet>
