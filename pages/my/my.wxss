.box {
  width: 100%;
  margin-bottom: 40rpx;
}

.profile {
  padding: 40rpx;
  width: 100%;
  display: flex;
}

.profile .avatar {
  width: 25%;
  display: flex;
}

.avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20%;
}

.profile .detail {
  display: flex;
  flex-direction: column;
}

.detail span:first-child {
  font-size: 40rpx;
  margin-bottom: 15rpx;
}

.detail button {
  width: 164rpx;
  height: 50rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: rgba(253, 119, 83, 1);
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(253, 119, 83, 1);
  margin-top: 20rpx;
  padding: 0;
}

.divider {
  width: 100%;
  height: 2rpx;
  background-color: #ebeced;
}

.main {
  box-sizing: border-box;
  width: 100%;
  padding: 100rpx 30rpx;
}

.box {
  display: flex;
}
.box view {
  display: flex;
}
.icon {
  width: 10%;
}

.icon image,
.box image {
  width: 42rpx;
  height: 42rpx;
  margin-top: 3rpx;
}

.arrow-right {
  width: 40rpx;
  margin-left: auto;
}

.box .right {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}


.right span{
  font-size: 35rpx;
  margin-bottom: 20rpx;
}